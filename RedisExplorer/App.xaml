<Application x:Class="RedisExplorer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:RedisExplorer">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Bootstrapper -->
                <ResourceDictionary>
                    <wpf:AppBootstrapper x:Key="Bootstrapper"/>

                    <LinearGradientBrush x:Key="BackgroundOpacityMask" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="DarkGray" Offset="0"/>
                        <GradientStop Color="LightGray" Offset="1"/>
                    </LinearGradientBrush>
                    
                </ResourceDictionary>

                <!-- Common Brushes and styles -->
                <!--<ResourceDictionary Source="Assets/CommonResources.xaml" />-->
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
